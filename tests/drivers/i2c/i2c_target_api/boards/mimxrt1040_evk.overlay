/*
 * Note: this sample requires the board to be modified! Populate resistors
 * R362 and R356.
 * To test this sample, connect J17.9<->J17.3 (SDA), J17.10<->J17.6 (SCL)
 */


&lpi2c1 {
	status = "okay";
	eeprom0: eeprom@54 {
		compatible = "zephyr,i2c-target-eeprom";
		reg = <0x54>;
		size = <256>;
	};
	eeprom2: eeprom@58 {
		compatible = "zephyr,i2c-target-eeprom";
		reg = <0x58>;
		size = <4096>;
		address-width = <16>;
		read-only;
	};
};

&lpi2c3 {
	status = "okay";
	eeprom1: eeprom@56 {
		compatible = "zephyr,i2c-target-eeprom";
		reg = <0x56>;
		size = <256>;
	};
};
